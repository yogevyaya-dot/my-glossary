import { getCollection } from 'astro:content';

// --- PERFORMANCE FIX: Local Font Import ---
// ◊ë◊û◊ß◊ï◊ù ◊ú◊î◊ï◊®◊ô◊ì ◊û◊í◊ï◊í◊ú ◊ë◊õ◊ú ◊ò◊¢◊ô◊†◊î, ◊ê◊†◊ó◊†◊ï ◊û◊ô◊ô◊ë◊ê◊ô◊ù ◊ê◊™ ◊î◊§◊ï◊†◊ò ◊ô◊©◊ô◊®◊ï◊™
import '@fontsource/outfit/300.css';
import '@fontsource/outfit/400.css';
import '@fontsource/outfit/500.css';
import '@fontsource/outfit/700.css';

// 1. Get all entries
const allEntries = await getCollection('glossary');

// 2. Sort A-Z
allEntries.sort((a, b) => a.data.title.localeCompare(b.data.title));

// 3. Group by First Letter
const grouped = allEntries.reduce((acc, entry) => {
  const firstLetter = entry.data.title.charAt(0).toUpperCase();
  const letterKey = /[a-zA-Z]/.test(firstLetter) ? firstLetter : '#';
  
  if (!acc[letterKey]) acc[letterKey] = [];
  acc[letterKey].push(entry);
  return acc;
}, {});

const sortedKeys = Object.keys(grouped).sort();
const baseUrl = Astro.site || 'http://localhost:4321';

// --- SEO Data ---
const schemaData = {
  "@context": "https://schema.org",
  "@type": "DefinedTermSet",
  "name": "The Modern Glossary",
  "description": "A comprehensive dictionary of terms and definitions.",
  "hasDefinedTerm": allEntries.map(entry => ({
    "@type": "DefinedTerm",
    "name": entry.data.title,
    "url": new URL(`/${entry.slug}`, baseUrl).href
  }))
};
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <title>Glossary | Modern Index</title>
    <meta name="description" content="Browse our comprehensive glossary of terms." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href={new URL(Astro.url.pathname, baseUrl).href} />
    
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <style>
      :root {
        /* --- ACCESSIBILITY FIX: High Contrast Colors --- */
        /* ◊¶◊ë◊¢◊ô◊ù ◊õ◊î◊ô◊ù ◊ô◊ï◊™◊® ◊ú◊ß◊®◊ô◊ê◊ï◊™ ◊ò◊ï◊ë◊î ◊ô◊ï◊™◊® */
        --primary: #4f46e5;       /* Indigo 600 (Darker for A11y) */
        --primary-dark: #4338ca;  /* Indigo 700 */
        --secondary: #7c3aed;     /* Violet 600 */
        
        --bg-color: #f8fafc;      /* Slate 50 */
        --surface: #ffffff;
        --text-main: #0f172a;     /* Slate 900 (High contrast text) */
        --text-muted: #475569;    /* Slate 600 (Accessible grey) */
        --border: #e2e8f0;
        
        --sidebar-width: 300px;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      }

      body {
        font-family: 'Outfit', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-main);
        margin: 0;
        line-height: 1.6;
      }

      /* Background Decoration */
      .bg-blob {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        z-index: -1;
        background: 
          radial-gradient(circle at 15% 50%, rgba(99, 102, 241, 0.05), transparent 25%),
          radial-gradient(circle at 85% 30%, rgba(139, 92, 246, 0.05), transparent 25%);
      }

      .container {
        max-width: 1280px;
        margin: 0 auto;
        padding: 40px 20px;
        display: grid;
        grid-template-columns: var(--sidebar-width) 1fr;
        gap: 60px;
        align-items: start;
      }

      /* --- Header --- */
      .page-header {
        grid-column: 1 / -1;
        text-align: center;
        margin-bottom: 40px;
        padding: 40px 0;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 24px;
        color: white;
        box-shadow: var(--shadow-lg);
      }

      h1 { 
        font-size: 3rem; 
        margin: 0; 
        letter-spacing: -0.02em;
        font-weight: 700;
      }
      
      .subtitle { 
        color: rgba(255,255,255, 0.95); /* Increased opacity for contrast */
        font-size: 1.2rem; 
        margin-top: 10px;
        font-weight: 400; /* Thicker font for readability */
      }

      /* --- Sidebar --- */
      aside {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(12px);
        padding: 24px;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.5);
        box-shadow: var(--shadow-md);
        position: sticky;
        top: 30px;
        max-height: calc(100vh - 60px);
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--primary) transparent;
      }

      /* Search */
      .search-wrapper {
        position: relative;
        margin-bottom: 25px;
      }

      .search-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-muted);
        pointer-events: none;
      }

      .search-input {
        width: 100%;
        padding: 14px 14px 14px 45px;
        border: 2px solid transparent;
        background: white;
        border-radius: 12px;
        font-size: 1rem;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        box-sizing: border-box;
        font-family: inherit;
        color: var(--text-main);
      }

      .search-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
      }

      .clear-btn {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-muted);
        font-size: 1.2rem;
        display: none; 
        padding: 4px;
      }

      .clear-btn:hover { color: var(--primary); }

      /* Alphabet Nav */
      .alphabet-nav {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 8px;
      }

      .alphabet-nav a {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--text-muted);
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s;
        font-size: 0.9rem;
      }

      .alphabet-nav a:hover, .alphabet-nav a:focus {
        background: #e0e7ff;
        color: var(--primary);
        outline: 2px solid var(--primary);
        outline-offset: 2px;
      }

      .alphabet-nav a.active-letter {
        background: var(--primary);
        color: white;
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.4);
      }

      /* --- Main Content --- */
      .letter-section {
        margin-bottom: 50px;
        scroll-margin-top: 40px;
      }

      .letter-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 10px;
      }

      /* ACCESSIBILITY FIX: Heading Hierarchy */
      /* This ensures we have H1 -> H2 -> H3 structure */
      h2.letter-badge {
        background: var(--primary);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: 700;
        box-shadow: 0 4px 10px rgba(79, 70, 229, 0.3);
        margin: 0; /* Reset browser default margin for h2 */
      }

      .term-count {
        color: var(--text-muted);
        font-size: 0.95rem;
        background: #f1f5f9;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 500;
      }

      /* Cards Grid */
      .term-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 20px;
      }

      .term-card {
        background: var(--surface);
        padding: 20px;
        border-radius: 16px;
        text-decoration: none;
        color: var(--text-main);
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: var(--shadow-sm);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        overflow: hidden;
      }

      .term-card:focus {
        outline: 2px solid var(--primary);
        outline-offset: 4px;
      }

      .term-card::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: var(--primary);
        opacity: 0;
        transition: opacity 0.3s;
      }

      .term-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
      }

      .term-card:hover::before {
        opacity: 1;
      }

      .term-title {
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0;
        color: var(--text-main);
      }

      .hidden { display: none !important; }
      
      .no-results { 
        text-align: center; 
        padding: 60px; 
        background: white;
        border-radius: 16px;
        box-shadow: var(--shadow-sm);
        display: none; 
      }
      
      .no-results p { font-size: 1.2rem; color: var(--text-muted); margin: 10px 0 0 0; }
      .no-results-icon { font-size: 3rem; display: block; margin-bottom: 10px; opacity: 0.5; }

      /* Mobile */
      @media (max-width: 768px) {
        .container { 
          grid-template-columns: 1fr; 
          gap: 30px;
          padding-top: 20px;
        }
        
        .page-header {
          border-radius: 0 0 24px 24px;
          margin: -20px -20px 30px -20px;
        }

        h1 { font-size: 2.2rem; }

        aside {
          position: static;
          max-height: none;
        }
        
        .alphabet-nav {
          grid-template-columns: repeat(auto-fit, minmax(40px, 1fr));
        }
      }
    </style>
  </head>
  <body>

    <div class="bg-blob"></div>
    
    <div class="container">
      <header class="page-header">
        <h1>Glossary</h1>
        <p class="subtitle">The definitive guide to our terminology</p>
      </header>

      <aside>
        <div class="search-wrapper">
          <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          <input type="text" id="searchInput" class="search-input" placeholder="Find a definition..." aria-label="Search terms">
          <button id="clearBtn" class="clear-btn" aria-label="Clear search">√ó</button>
        </div>
        
        <nav class="alphabet-nav" aria-label="Alphabet navigation">
          {sortedKeys.map((letter) => (
            <a href={`#letter-${letter}`} class="nav-letter" data-letter={letter}>{letter}</a>
          ))}
        </nav>
      </aside>

      <main id="glossaryContent">
        <div id="noResults" class="no-results">
            <span class="no-results-icon">ü§∑‚Äç‚ôÇÔ∏è</span>
            <p>No results found.</p>
        </div>

        {sortedKeys.map((letter) => (
          <section id={`letter-${letter}`} class="letter-section">
            <div class="letter-header">
                {/* ACCESSIBILITY FIX: Changed div to h2 for correct heading hierarchy */}
                <h2 class="letter-badge">{letter}</h2>
                <span class="term-count">{grouped[letter].length} terms</span>
            </div>
            
            <div class="term-grid">
              {grouped[letter].map((entry) => (
                <a href={`/${entry.slug}`} class="term-card" data-term={entry.data.title.toLowerCase()}>
                  <h3 class="term-title">{entry.data.title}</h3>
                </a>
              ))}
            </div>
          </section>
        ))}
      </main>
    </div>

    <script>
      // Elements
      const searchInput = document.getElementById('searchInput');
      const clearBtn = document.getElementById('clearBtn');
      const letterSections = document.querySelectorAll('.letter-section');
      const noResultsMsg = document.getElementById('noResults');
      const navLinks = document.querySelectorAll('.nav-letter');

      // --- 1. Search Logic ---
      function performSearch() {
        const query = searchInput.value.toLowerCase();
        let hasGlobalResults = false;

        // Toggle clear button
        clearBtn.style.display = query.length > 0 ? 'block' : 'none';

        letterSections.forEach(section => {
          let hasVisibleTerms = false;
          const termsInThisSection = section.querySelectorAll('.term-card');

          termsInThisSection.forEach(card => {
            const title = card.getAttribute('data-term');
            if (title.includes(query)) {
              card.classList.remove('hidden');
              hasVisibleTerms = true;
              hasGlobalResults = true;
            } else {
              card.classList.add('hidden');
            }
          });

          if (hasVisibleTerms) {
            section.classList.remove('hidden');
          } else {
            section.classList.add('hidden');
          }
        });

        noResultsMsg.style.display = hasGlobalResults ? 'none' : 'block';
      }

      searchInput.addEventListener('input', performSearch);
      
      clearBtn.addEventListener('click', () => {
        searchInput.value = '';
        performSearch();
        searchInput.focus();
      });

      // --- 2. Active Letter Highlighter (Intersection Observer) ---
      const observerOptions = {
        root: null,
        rootMargin: '-20% 0px -60% 0px', // Trigger when section is near top
        threshold: 0
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Get the letter from ID (letter-A -> A)
            const id = entry.target.id.replace('letter-', '');
            
            // Update Nav
            navLinks.forEach(link => {
                link.classList.toggle('active-letter', link.dataset.letter === id);
            });
          }
        });
      }, observerOptions);

      letterSections.forEach(section => observer.observe(section));
    </script>
  </body>
</html>